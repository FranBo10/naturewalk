<header id="navigation-2" class="navigation-2">
  <div class="logo">
    <a href="{{ path('home') }}">Nature<span class="logoNombre">Walk</span></a>
  </div>
  <nav class="elementos">
    <ul>
      <li>
        <a href="{{ path('home') }}">Home</a>
      </li>
      <li>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('admin') }}">ADMIN</a>
        {% endif %}
      </li>
      <li>
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_GUIA') %}
        <a href="{{ path('guia') }}">GUIA</a>
        {% endif %}
      </li>
      <li>
        <a href="{{ path('blog', { id: categoria.id }) }}">Blog</a>
      </li>
      <li>
        <a href="{{ path('contacto') }}">Contacto</a>
      </li>
      {% if app.user %}
      <li>
        <div class="icon-nav">
          <img
            class="rounded-circle"
            src="{{ asset('uploads/images/avatars/' ~ app.user.avatar ~ '.jpg') }}"
            alt="avatar"
            style="width: 40px; height: 40px"
          />
          <a class="user__name">{{ app.user.nombre }}</a>
        </div>
        <div class="container__user">
          <ul>
            <div class="cuenta-reservas">
              <li>
                <a href="{{ path('cuenta', { id: app.user.id }) }}"
                  >Mi cuenta</a
                >
                <i class="fas fa-user"></i>
              </li>
              <hr />
              <li>
                <a href="{{ path('reservas') }}">Reservas</a>
                <i class="fas fa-clipboard-list"></i>
              </li>
              <hr />
            </div>
            <a href="{{ path('app_logout') }}" class="btn-danger mx-auto"
              >Desconexion</a
            >
          </ul>
        </div>
      </li>
      {% else %}
      <li>
        <a>
          <i class="fa fa-user text-white me-5"></i>
        </a>
        <ul class="not-user">
          <div class="container">
            <form method="post" action="{{ path('app_login') }}">
              <div class="titulo-login">
                <h3>Conexión</h3>
              </div>
              <div class="form-login">
                <input
                  type="email"
                  name="email"
                  id="inputEmail"
                  placeholder="E-Mail"
                  class="form-control"
                  autocomplete="off"
                  required
                  autofocus
                />
                <input
                  type="password"
                  name="password"
                  id="inputPassword"
                  placeholder="Contraseña"
                  class="form-control"
                  autocomplete="current-password"
                  required
                />
                <input
                  type="hidden"
                  name="_csrf_token"
                  value="{{ csrf_token('authenticate') }}"
                />
                <div class="under-login">
                  <div class="checkbox-login">
                    <label>
                      <input type="checkbox" name="_remember_me" />
                      Recuérdame
                    </label>
                    <small>
                      <a href="{{ path('app_forgot_password_request') }}"
                        >He olvidado mi contraseña</a
                      >
                    </small>
                  </div>
                  <div class="button-login">
                    <button class="btn-primary" type="submit">
                      Iniciar sesión
                    </button>
                    <a>No tienes cuenta ?</a>
                    <a
                      href="#"
                      data-bs-toggle="modal"
                      data-bs-target="#registro"
                      >Registrate aqui</a
                    >
                  </div>
                </div>
              </div>
            </form>
          </div>
        </ul>
      </li>
      {% endif %}
    </ul>
  </nav>
  <div class="menu-btn">
    <i class="fa fa-bars"></i>
  </div>
