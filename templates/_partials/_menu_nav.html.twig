      #}
      <li class="item">
        <a href="{{ path('admin') }}">
          <div class="icon">
            <i class="fas fa-user"></i>
          </div>
          <div class="title">Ad<span>min</span></div>
        </a>
      </li>
      {#
      <div class="item-separator"></div>
      #}
      <li class="item">
        <a href="{{ path('guia') }}">
          <div class="icon">
            <i class="fas fa-flag"></i>
          </div>
          <div class="title">Gu<span>ia</span></div>
        </a>
      </li>
      {% endif %} {#
      <div class="item-separator"></div>
      #}
      <li class="item">
        <a href="{{ path('blog', { id: categoria.id }) }}">
          <div class="icon">
            <i class="fas fa-book"></i>
          </div>
          <div class="title">Bl<span>og</span></div>
        </a>
      </li>
      {#
      <div class="item-separator"></div>
      #}
      <li class="item">
        <a href="{{ path('contacto') }}">
          <div class="icon">
            <i class="fas fa-comments"></i>
          </div>
          <div class="title">Con<span>tact</span></div>
        </a>
      </li>
      <li class="item">
        <a href="#" class="language-toggle">
          <div class="icon">
            <i class="fas fa-language"></i>
          </div>
          <div class="title">Lan<span>guage</span> <i class="fas fa-chevron-down chevron-custom"></i></div>
        </a>
        <ul class="idioma-submenu language-dropdown">
          {% set routeParams = app.request.query.all %}
          {% if app.request.attributes.get('id') is not null %}
              {% set routeParams = routeParams|merge({'id': app.request.attributes.get('id')}) %}
          {% endif %}
          <li>
              <a class="idioma-link" href="{{ path(app.request.attributes.get('_route'), routeParams|merge({'_locale': 'en'})) }}">
                  <img src="{{ asset('uploads/images/icons/en.png') }}" alt="en" class="flag-icon"><span class="ms-3">English</span>
              </a>
          </li>
          <li>
              <a class="idioma-link" href="{{ path(app.request.attributes.get('_route'), routeParams|merge({'_locale': 'fr'})) }}">
                  <img src="{{ asset('uploads/images/icons/fr.png') }}" alt="fr" class="flag-icon"><span class="ms-3">Français</span>
              </a>
          </li>
        </ul>
      </li>
      <li class="item">
        <a href="{{ path('cuenta', { id: app.user.id }) }}">
          <div class="icon">
            <i class="fas fa-fingerprint"></i>
          </div>
          <div class="title">My Acc<span>ount</span></div>
        </a>
      </li>
      {#
