          <div class="icon">
            <i class="fas fa-clipboard-list"></i>
          </div>
          <div class="title">My Boo<span>kings</span></div>
        </a>
      </li>
      {#
      <div class="item-separator"></div>
      #}
      <li class="item">
        <a href="{{ path('app_logout') }}">
          <div class="icon"><i class="fas fa-globe"></i></div>
          <div class="title">Lo<span>g Out</span></div>
        </a>
      </li>
      {% else %}
      <li class="item">
        <a href="{{ path('home') }}">
          <div class="icon"><i class="fas fa-home"></i></div>
          <div class="title">Lo<span>g in</span></div>
        </a>
      </li>
      {#
      <div class="item-separator"></div>
      #}
      <li class="item">
        <a href="{{ path('blog', { id: categoria.id }) }}">
          <div class="icon"><i class="fas fa-book"></i></div>
          <div class="title">Bl<span>og</span></div>
        </a>
      </li>
      {#
      <div class="item-separator"></div>
      #}
      <li class="item">
        <a href="{{ path('contacto') }}">
          <div class="icon"><i class="fas fa-book"></i></div>
          <div class="title">Co<span>ntact</span></div>
        </a>
      </li>
      {#
      <div class="item-separator"></div>
      #}
      <li class="item">
        <a href="{{ path('app_login') }}">
          <div class="icon"><i class="fas fa-user"></i></div>
          <div class="title">Lo<span>g in</span></div>
        </a>
      </li>
      {#
      <div class="item-separator"></div>
      #}
      <li class="item">
        <a href="{{ path('registro_tratar') }}">
          <div class="icon"><i class="fas fa-clipboard"></i></div>
          <div class="title">Regi<span>stration</span></div>
        </a>
      </li>
      {% endif %}
    </ul>
  </div>
  <div
    class="modal fade"
    id="registro"
    tabindex="-1"
    aria-labelledby="inscriptionLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div
          class="modal-body border border-primary rounded m-0 p-2 text-black"
        >
          <div class="p-3">
            {{
              render(
                controller(
                  "App\\Controller\\RegistrationController::agregarRegistro"
                )
              )
            }}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
