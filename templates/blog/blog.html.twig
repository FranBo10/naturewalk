{% extends 'base.html.twig' %} {% block title %}Blog{% endblock %} {% block body
%}
<main>
  <div class="hero_single inner_pages">
    <div
      class="opacity-mask menu-opacity"
      data-opacity-mask="rgba(0, 0, 0, 0.6)"
    >
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-9 col-lg-10 col-md-8">
            <h1>Bienvenido al nuestro blog</h1>
            <p>Descubre aventuras, lugares y restaurantes de Paris</p>
          </div>
        </div>
      </div>
    </div>
    <div class="frame white"></div>
  </div>
  <div class="container-fluid margin_120_100 my-5">
    <div class="titulo__blog">
      <h2>{{ titulo }} :</h2>
    </div>
    <div class="row">
      <div class="col-sm-9">
        <div class="row">
          {% for blog in blogs %}
          <div class="col-sm-6" data-cue="slideInUp">
            <article class="blog">
              <figure>
                <a href="blog-post.html"
                  ><img src="{{ asset("uploads/images/blog/" ~ blog.imagen) }}"
                  alt="{{ blog.titulo }}" />
                  <div class="preview"><span>Ver más...</span></div>
                </a>
              </figure>
              <div class="post_info">
                <small>
                  {% for etiqueta in etiquetasPorBlog[blog.id] %}
                  {{ etiqueta.titulo }}{% if not loop.last %}, {% endif %} {%
                  endfor %} - {{ blog.fechaRegistro|date('d/m/y') }}
                </small>
                <h2>
                  <a href="blog-post.html">{{ blog.titulo }}</a>
                </h2>
                <p>
                  {{ blog.descripcionCorta }}
                </p>

                <div class="masinfo">
                  <a class="btn-primary" href="#">Ver más...</a>
                </div>
              </div>
            </article>
          </div>
          {% endfor %}
        </div>

        {#
        <div class="pagination_fg">
          <a href="#">&laquo;</a>
          <a href="#" class="active">1</a>
          <a href="#">2</a>
          <a href="#">3</a>
          <a href="#">4</a>
          <a href="#">5</a>
          <a href="#">&raquo;</a>
        </div>
        #}
      </div>
      <!-- /col -->

      {% include "_partials/blogSidebar.html.twig" %}
      <!-- /aside -->
    </div>
    <!-- /row -->
  </div>
</main>
{% endblock %}
